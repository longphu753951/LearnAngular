{
  "singleQuote": true,
  "printWidth": 120,
  "proseWrap": "never",
  "trailingComma": "all",
  "bracketSpacing": true,
  "semi": true,
  "quoteProps": "as-needed",
  "arrowParens": "always",
  "overrides": [
    {
      "files": "*.component.html",
      "options": {
        "parser": "angular"
      }
    },
    {
      "files": "*.html",
      "options": {
        "parser": "html"
      }
    }
  ]
}
